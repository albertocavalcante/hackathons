root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.{yml,yaml}]
indent_size = 2

[*.json]
indent_size = 2

[*.{js,jsx,ts,tsx}]
indent_size = 2

[*.py]
indent_size = 4

[*.go]
indent_style = tab
indent_size = 4

[*.{tf,tfvars}]
indent_size = 2

[*.{sh,bash}]
indent_size = 2

[{Makefile,*.mk}]
indent_style = tab
indent_size = 4

[*.{bazel,bzl}]
indent_size = 4

[*.mojo]
indent_size = 4

[*.{c,cpp,h,hpp}]
indent_size = 2

[*.{toml,ini,cfg}]
indent_size = 2

[{Dockerfile*,*.dockerfile}]
indent_size = 2

[*.{min.js,min.css}]
insert_final_newline = false
trim_trailing_whitespace = false
